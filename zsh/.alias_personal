alias ls="ls -1hs --group-directories-first --file-type --color=alway"
alias "meh"="feh --scale-down --auto-zoom"
function backlight() {
  sudo sh -c "echo $1 >/sys/class/backlight/intel_backlight/brightness"
}
alias pause="dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"
alias play="pause"
alias next="dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"
alias prev="dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"
